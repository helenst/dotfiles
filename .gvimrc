
" tiny font
set guifont=Bitstream\ Vera\ Sans\ Mono\ 9
map <leader>- :set guifont=Bitstream\ Vera\ Sans\ Mono\ 9<cr>
map <leader>+ :set guifont=Bitstream\ Vera\ Sans\ Mono\ 10<cr>


" get rid of menu and toolbar clutter
set guioptions-=T
set guioptions-=m
set guioptions-=l
set guioptions-=r
set guioptions-=L
set guioptions-=R
